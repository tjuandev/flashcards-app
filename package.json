{
	"name": "flashcards-app",
	"version": "1.0.0",
	"description": "Backend application where you can handle flashcards studies.",
	"main": "src/app.ts",
	"author": "tjuandev",
	"license": "MIT",
	"packageManager": "pnpm@10.23.0",
	"dependencies": {
		"@types/pg": "^8.15.6",
		"dotenv": "^16.6.1",
		"express": "^5.1.0",
		"node-pg-migrate": "^8.0.3",
		"pg": "^8.16.3",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/express": "^5.0.5",
		"@types/node": "^22.19.1",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-istanbul": "3.1.2",
		"@vitest/ui": "^3.2.4",
		"lefthook": "^1.13.6",
		"nodemon": "^3.1.11",
		"supertest": "^7.1.4",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"scripts": {
		"build": "tsc",
		"start": "node dist/server.js",
		"dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
		"lint": "biome check ./src",
		"format": "biome check --write ./src",
		"biome:ci": "biome ci ./src --no-errors-on-unmatched --files-ignore-unknown=true",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:w": "vitest --watch",
		"test:ui": "vitest --ui",
		"migrate:up": "node-pg-migrate up",
		"migrate:down": "node-pg-migrate down",
		"migrate:redo": "node-pg-migrate redo",
		"migrate:create": "node-pg-migrate create"
	},
	"imports": {
		"#src/*": "./src/*",
		"#testHelpers/*": "./src/testHelpers/*",
		"#config/*": "./src/config/*"
	},
	"type": "module"
}
