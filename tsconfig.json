{
	"compilerOptions": {
		"target": "ES2024",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": false,
		"strict": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
